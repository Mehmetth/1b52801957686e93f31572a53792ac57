<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.station.StationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ugs_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/ugsInfo_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ugsValue_textview"
                    android:text="UGS : "
                    android:textColor="@android:color/black"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/ugsValue_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="5000"
                    android:textColor="@android:color/black"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eus_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ugs_layout"
                app:layout_constraintEnd_toStartOf="@+id/ds_layout"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/eusInfo_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/eusValue_textview"
                    android:text="EUS : "
                    android:textColor="@android:color/black"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/eusValue_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="500"
                    android:textColor="@android:color/black"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ds_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/ds_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/dsValue_textview"
                    android:text="DS : "
                    android:textColor="@android:color/black"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/dsValue_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="50000"
                    android:textColor="@android:color/black"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/top_layout_underline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/spaceVehicle_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout">

            <TextView
                android:id="@+id/spaceVehicleName_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:text="WhartonX"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="21sp"/>
            <TextView
                android:id="@+id/damageCapacity_textview"
                android:layout_width="100dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/spaceVehicleName_textview"
                app:layout_constraintEnd_toStartOf="@+id/endValue_textview"
                android:background="@drawable/corner_rectangel_bg"
                android:gravity="center"
                android:text="100"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/endValue_textview"
                android:layout_width="100dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/corner_rectangel_bg"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="49s"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <SearchView
            android:id="@+id/searchName_searchview"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:iconifiedByDefault="false"
            android:queryHint="search"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/spaceVehicle_layout"
            android:background="@drawable/corner_rectangel_bg"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/station_recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="350dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/searchName_searchview"
            app:layout_constraintBottom_toTopOf="@+id/stationName_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/rightArrow_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/right_arrow"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/searchName_searchview"
            app:layout_constraintBottom_toTopOf="@+id/stationName_textview"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageButton
            android:id="@+id/leftArrow_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/left_arrow"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/searchName_searchview"
            app:layout_constraintBottom_toTopOf="@+id/stationName_textview"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/stationName_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/station_recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="WhartonX"
            android:textColor="@android:color/black"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="21sp"/>

        <ProgressBar
            android:id="@+id/stationFragment_progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/searchName_searchview"
            app:layout_constraintBottom_toTopOf="@+id/stationName_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateTint="#000000"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>