<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="48dp"
    android:background="@drawable/corner_rectangel_bg">

    <TextView
        android:id="@+id/stationUgsCapacity_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="2000/1000"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/stationDistance_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200EUS"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/stationUgsCapacity_textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/stationFavorite_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/unfavorite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/stationName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="YZCRF - 246"
        android:textColor="@android:color/black"
        android:fontFamily="casual"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stationDistance_textview"
        app:layout_constraintBottom_toTopOf="@+id/stationTravel_button" />

    <Button
        android:id="@+id/stationTravel_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Travel!"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
